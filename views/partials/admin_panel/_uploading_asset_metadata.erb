  <h2>Add New Asset</h3>

  <h3>Upload Video</h2>

  <!-- You can also upload subtitle files along with this -->
  <div class="upload_asset">
    <mux-uploader
      endpoint='<%= special_endpoint%>'
      ></mux-uploader>
  </div>

  <h3>Asset metadata</h3>
    <form action="/upload_asset_metadata#" method="post" enctype="multipart/form-data">
      <label for="title">Title:</label><br>
      <input type="text" id="title" name="title"><br><br>

      <label for="description">Description:</label><br>
      <textarea id="description" name="description" rows="4" cols="50"></textarea><br><br>
<%# 
      <label for="year">Year:</label><br>
      <select id="year" name="year">
        <option value="">Select Year</option>
        <!-- Using JavaScript to populate years dynamically, the script takes care of it... -->
      </select><br><br> %>

      <label for="year">Year:</label><br>
      <select id="year" name="year">
        <option value="">Select Year</option>
        <% (1900..Time.now.year).to_a.reverse.each do |year| %>
          <option value="<%= year %>"><%= year %></option>
        <% end %>
      </select><br><br>

      <label for="countries">Country:</label>
      <input list="countryList" id="countries" name="countries">
      <datalist id="countryList">
        <% @country_options.each do |country| %>
          <option value="<%= country %>">
        <% end %>
      </datalist><br><br>

      <label for="subtitle_track">Subtitle Track File:</label>
                <input type="file" id="subtitle_track" name="subtitle_track" accept=".srt" required><br><br>

                <label for="subtitle_name">Subtitle Name:</label>
                  <input type="text" id="subtitle_name" name="subtitle_name"><br><br>

                <label for="language_code">Language Code:</label>
                  <select id="language_code" name="language_code">
                    <% @language_options.each do |language| %>
                      <option value="<%= language[:code] %>"><%= language[:name] %></option>
                    <% end %>
                  </select><br><br>

      <label for="genre">Genre/Tags:</label><br>
      <input type="checkbox" id="action" name="genre[]" value="Action">
      <label for="action">Action</label><br>
      <input type="checkbox" id="comedy" name="genre[]" value="Comedy">
      <label for="comedy">Comedy</label><br>
      <input type="checkbox" id="drama" name="genre[]" value="Drama">
      <label for="drama">Drama</label><br>
      <input type="checkbox" id="romance" name="genre[]" value="Romance">
      <label for="romance">Romance</label><br>
      <input type="checkbox" id="documentary" name="genre[]" value="Documentary">
      <label for="documentary">Documentary</label><br>
      <input type="checkbox" id="other" name="genre[]" value="Other">
      <label for="other">Other</label><br>
      <br>

      <label for="notes">Notes:</label><br>
      <textarea id="notes" name="notes" rows="4" cols="50"></textarea><br><br>

      <input type="submit" value="Submit">
    </form>
