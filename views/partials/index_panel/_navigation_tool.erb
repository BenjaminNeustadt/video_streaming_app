<nav>
  <ul>
    <li><a href="#">SELECTION</a></li>
    <li><a href="#">ALL</a></li>
    <li class="dropdown_nav">
      <a href="#">GENRE</a>
      <div class="dropdown-content_nav">
        <% genres = Asset.pluck(:genre).map { |genre| genre.is_a?(Array) ? genre : JSON.parse(genre || '[]') }.flatten.uniq.reject(&:empty?) %>
        <% genres.each do |genre| %>
          <% if genre.present? %>
            <a href="/genre/<%= genre.strip %>"><%= genre.strip %></a>
          <% end %>
        <% end %>
      </div>
    </li>
    <li class="dropdown_nav">
      <a href="#">DIRECTOR</a>
      <div class="dropdown-content_nav">
        <% Asset.distinct.pluck(:directors).each do |director| %>
          <a href="/director/<%= director %>"><%= director %></a>
        <% end %>
      </div>
    </li>
    <li class="dropdown_nav">
      <a href="#">COUNTRY</a>
      <div class="dropdown-content_nav">
        <% Asset.distinct.pluck(:country).each do |country| %>
          <a href="/country/<%= country %>"><%= country %></a>
        <% end %>
      </div>
    </li>
  </ul>
</nav>
